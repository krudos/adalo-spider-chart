{
  "displayName": "Simple Spider Chart",
  "defaultWidth": 350,
  "defaultHeight": 350,
  "components": "./index.js",
  "icon": "./thumbnail.png",
  "props": [
    {
      "name": "chartTitle",
      "displayName": "Chart Title",
      "type": "text",
      "default": "Chart title"
    },
    {
      "name": "chartTitleColor",
      "displayName": "Title Text Color",
      "type": "color",
      "default": "@text"
    }
  ],
  "childComponents": [
    {
      "name": "titles",
      "displayName": "Spoke Titles",
      "props": [
        {
          "name": "spokeTitle1",
          "displayName": "First Spoke Title",
          "type": "text",
          "default": "Example 1"
        },
        {
          "name": "spokeTitle2",
          "displayName": "Second Spoke Title",
          "type": "text",
          "default": "Example 2"
        },
        {
          "name": "spokeTitle3",
          "displayName": "Third Spoke Title",
          "type": "text",
          "default": "Example 3"
        },
        {
          "name": "spokeTitle4",
          "displayName": "Fourth Spoke Title",
          "type": "text",
          "default": "Example 4"
        },
        {
          "name": "spokeTitle5",
          "displayName": "Fifth Spoke Title",
          "type": "text",
          "default": "Example 5"
        }
      ]
    },
    {
      "name": "scale",
      "displayName": "Chart Scale",
      "props": [
        {
          "name": "manualScaleEnable",
          "displayName": "Manual Scale",
          "type": "boolean",
          "default": false
        },
        {
          "name": "manualScaleValue",
          "displayName": "Manual Scale Value",
          "type": "number",
          "default": 10,
          "enabled": {
            "manualScaleEnable": true
          }
        }
      ]
    },
    {
      "name": "dataset1",
      "displayName": "Dataset 1",
      "props": [
        {
          "name": "dataset1LineColor",
          "displayName": "Line Color",
          "type": "color",
          "default": "@primary"
        },
        {
          "name": "dataset1SpokeValue1",
          "displayName": "First Spoke Value",
          "type": "number",
          "default": 1
        },
        {
          "name": "dataset1SpokeValue2",
          "displayName": "Second Spoke Value",
          "type": "number",
          "default": 1
        },
        {
          "name": "dataset1SpokeValue3",
          "displayName": "Third Spoke Value",
          "type": "number",
          "default": 1
        },
        {
          "name": "dataset1SpokeValue4",
          "displayName": "Fourth Spoke Value",
          "type": "number",
          "default": 1
        },
        {
          "name": "dataset1SpokeValue5",
          "displayName": "Fifth Spoke Value",
          "type": "number",
          "default": 1
        }
      ]
    },
    {
      "name": "dataset2",
      "displayName": "Dataset 2",
      "props": [
        {
          "name": "enableDataset2",
          "displayName": "Enabled",
          "type": "boolean",
          "default": false
        },
        {
          "name": "dataset2LineColor",
          "displayName": "Line Color",
          "type": "color",
          "default": "@secondary",
          "enabled": {
            "enableDataset2": true
          }
        },
        {
          "name": "dataset2SpokeValue1",
          "displayName": "First Spoke Value",
          "type": "number",
          "default": 2,
          "enabled": {
            "enableDataset2": true
          }
        },
        {
          "name": "dataset2SpokeValue2",
          "displayName": "Second Spoke Value",
          "type": "number",
          "default": 3,
          "enabled": {
            "enableDataset2": true
          }
        },
        {
          "name": "dataset2SpokeValue3",
          "displayName": "Third Spoke Value",
          "type": "number",
          "default": 4,
          "enabled": {
            "enableDataset2": true
          }
        },
        {
          "name": "dataset2SpokeValue4",
          "displayName": "Fourth Spoke Value",
          "type": "number",
          "default": 5,
          "enabled": {
            "enableDataset2": true
          }
        },
        {
          "name": "dataset2SpokeValue5",
          "displayName": "Fifth Spoke Value",
          "type": "number",
          "default": 6,
          "enabled": {
            "enableDataset2": true
          }
        }
      ]
    }
  ]
}
