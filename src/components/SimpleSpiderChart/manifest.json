{
  "displayName": "Simple Spider Chart",
  "defaultWidth": 350,
  "defaultHeight": 350,
  "components": "./index.js",
  "icon": "./thumbnail.png",
  "props": [
    {
      "name": "chartTitle",
      "displayName": "Chart title",
      "type": "text",
      "default": "Chart title"
    },
    {
      "name": "chartTitleColor",
      "displayName": "Select title text color",
      "type": "color",
      "default": "@text"
    }
  ],
  "childComponents": [
    {
      "name": "titles",
      "displayName": "Spoke titles",
      "props": [
        {
          "name": "spokeTitle1",
          "displayName": "Select title for 1st spoke",
          "type": "text",
          "default": "spoke 1 title"
        },
        {
          "name": "spokeTitle2",
          "displayName": "Select title for 2nd spoke",
          "type": "text",
          "default": "spoke 2 title"
        },
        {
          "name": "spokeTitle3",
          "displayName": "Select title for 3rd spoke",
          "type": "text",
          "default": "spoke 3 title"
        },
        {
          "name": "spokeTitle4",
          "displayName": "Select title for 4th spoke",
          "type": "text",
          "default": "spoke 4 title"
        },
        {
          "name": "spokeTitle5",
          "displayName": "Select title for 5th spoke",
          "type": "text",
          "default": "spoke 5 title"
        }
      ]
    },
    {
      "name": "scale",
      "displayName": "Chart scale",
      "props": [
        {
          "name": "manualScaleEnable",
          "displayName": "Use manual scale value",
          "type": "boolean",
          "default": false
        },
        {
          "name": "manualScaleValue",
          "displayName": "Select manual max value",
          "type": "number",
          "default": 10,
          "enabled": {
            "manualScaleEnable": true
          }
        }
      ]
    },

    {
      "name": "dataset1",
      "displayName": "Dataset 1",
      "props": [
        {
          "name": "dataset1LineColor",
          "displayName": "Select line color",
          "type": "color",
          "default": "@primary"
        },
        {
          "name": "dataset1SpokeValue1",
          "displayName": "Select value for 1st spoke",
          "type": "number",
          "default": 1
        },
        {
          "name": "dataset1SpokeValue2",
          "displayName": "Select value for 2nd spoke",
          "type": "number",
          "default": 1
        },
        {
          "name": "dataset1SpokeValue3",
          "displayName": "Select value for 3rd spoke",
          "type": "number",
          "default": 1
        },
        {
          "name": "dataset1SpokeValue4",
          "displayName": "Select value for 4th spoke",
          "type": "number",
          "default": 1
        },
        {
          "name": "dataset1SpokeValue5",
          "displayName": "Select value for 5th spoke",
          "type": "number",
          "default": 1
        }
      ]
    },
    {
      "name": "dataset2",
      "displayName": "Dataset 2",
      "props": [
        {
          "name": "enableDataset2",
          "displayName": "Enable dataset 2",
          "type": "boolean",
          "default": false
        },
        {
          "name": "dataset2LineColor",
          "displayName": "Select line color",
          "type": "color",
          "default": "@secondary",
          "enabled": {
            "enableDataset2": true
          }
        },
        {
          "name": "dataset2SpokeValue1",
          "displayName": "Select value for 1st spoke",
          "type": "number",
          "default": 1,
          "enabled": {
            "enableDataset2": true
          }
        },
        {
          "name": "dataset2SpokeValue2",
          "displayName": "Select value for 2nd spoke",
          "type": "number",
          "default": 1,
          "enabled": {
            "enableDataset2": true
          }
        },
        {
          "name": "dataset2SpokeValue3",
          "displayName": "Select value for 3rd spoke",
          "type": "number",
          "default": 1,
          "enabled": {
            "enableDataset2": true
          }
        },
        {
          "name": "dataset2SpokeValue4",
          "displayName": "Select value for 4th spoke",
          "type": "number",
          "default": 1,
          "enabled": {
            "enableDataset2": true
          }
        },
        {
          "name": "dataset2SpokeValue5",
          "displayName": "Select value for 5th spoke",
          "type": "number",
          "default": 1,
          "enabled": {
            "enableDataset2": true
          }
        }
      ]
    }
  ]
}
